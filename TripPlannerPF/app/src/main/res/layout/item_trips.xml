<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvDestination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Destino"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etTripDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Fecha"
        android:padding="8dp"
        android:backgroundTint="#CCCCCC"
        android:textColor="#000000"
        android:focusable="false"
        android:clickable="true" />

    <Button
        android:id="@+id/btnEditDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#C7B0B0"
        android:text="Elige"
        android:contentDescription="Edit Date" />

    <Button
        android:id="@+id/btnEditTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#FF4A4A"
        android:text="Editar"
        android:contentDescription="Edit Trip" />

</LinearLayout>